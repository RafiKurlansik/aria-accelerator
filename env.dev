# Development Configuration for ARIA
# This allows the app to run with minimal configuration for local testing

# Enable development mode (relaxed validation)
APP_DEVELOPMENT_MODE=true
APP_DEBUG=true

# Minimal Databricks configuration
DATABRICKS_HOST=https://e2-demo-west.cloud.databricks.com
# Add your token if you want to test API calls:
# DATABRICKS_TOKEN=your-token-here

# Optional: Model endpoints (will use defaults if not set)
# QUESTION_EXTRACTION_MODEL=databricks-claude-3-7-sonnet
# ANSWER_GENERATION_MODEL=agents_users-rafi_kurlansik-auto_rfi

# Local file storage
VOLUME_PATH=/tmp/aria_dev/

# Disable tracking for development
TRACKING_ENABLED=false 
# ARIA Configuration Example
# Copy this file to .env and update with your values

# Databricks Configuration (Required)
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-personal-access-token

# Optional: Service Principal (for Databricks Apps deployment)
# DATABRICKS_CLIENT_ID=your-client-id
# DATABRICKS_CLIENT_SECRET=your-client-secret

# Optional: SQL Warehouse (for analytics)
DATABRICKS_WAREHOUSE_ID=your-warehouse-id

# Application Settings (APP_ prefix)
APP_DEBUG=true
APP_DEVELOPMENT_MODE=true
APP_MAX_FILE_SIZE_MB=50
APP_SESSION_TIMEOUT_HOURS=24

# Usage Tracking (TRACKING_ prefix)
TRACKING_ENABLED=false
TRACKING_VOLUME_PATH=/Volumes/main/default/tracking

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
BACKEND_PORT=8080
LOG_LEVEL=DEBUG  # DEBUG (local), INFO, WARNING, ERROR, CRITICAL (production)

# Optional: CORS Configuration (comma-separated origins)
# ARIA_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Note: Model configurations are managed in app/src/aria/config/backend_services.yaml 
# ARIA Configuration Example
# Copy this file to .env and update with your values

# Databricks Configuration (Required)
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-personal-access-token

# Optional: Service Principal (for Databricks Apps deployment)
# DATABRICKS_CLIENT_ID=your-client-id
# DATABRICKS_CLIENT_SECRET=your-client-secret

# Optional: SQL Warehouse (for usage tracking)
# DATABRICKS_WAREHOUSE_ID=your-warehouse-id

# Optional: File Storage
VOLUME_PATH=/tmp/

# Optional: Model Configuration
QUESTION_EXTRACTION_MODEL=databricks-claude-3-7-sonnet
ANSWER_GENERATION_MODEL=agents_users-rafi_kurlansik-auto_rfi

# Optional: Application Settings
APP_DEBUG=true
APP_MAX_FILE_SIZE_MB=50
LOG_LEVEL=DEBUG  # DEBUG (local), INFO, WARNING, ERROR, CRITICAL (production)

# Optional: Python Executable (deployment-specific)
# Local development: auto-detects pyenv if available, falls back to python3
# Docker/Kubernetes: set to 'python' or 'python3' 
# Databricks: set to 'python'
# PYTHON_EXECUTABLE=python3

# Optional: Usage Tracking
TRACKING_ENABLED=false 